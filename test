Q1 = int(input("Q1) Do you like Dawn or Dusk?  \n    1) Dawn\n    2) Dusk"))
Q2 = int(input("Q2) When I’m dead, I want people to remember me as: \n    1) The Good\n    2) The Great\n    3) The Wise\n    4) The Bold"))
Q3 = int(input("Q3) Which kind of instrument most pleases your ear? \n    1) The violin\n    2) The trumpet\n    3) The piano\n    4) The drum"))

Gryffindor = 0
Ravenclaw = 0
Hufflepuff = 0
Slytherin = 0

if Q1 == 1:
    Gryffindor = (0 + 1)
if Q1 == 1:
    Ravenclaw = (0 + 1)
elif Q1 == 2:
    Hufflepuff = (0 + 1)
elif Q1 == 2:
    Slytherin = (0 + 1)
else:
    print("Wrong input!")

if Q2 == 1:
    Hufflepuff = (Hufflepuff + 2)
elif Q2 == 2:
    Slytherin = (Slytherin + 2)
elif Q2 == 3:
    Ravenclaw = (Ravenclaw + 2)
elif Q2 == 4:
    Gryffindor = (Gryffindor + 2)
else:
    print("Wrong input!")

if Q3 == 1:
    Slytherin = (Slytherin + 4)
elif Q3 == 2:
    Hufflepuff = (Hufflepuff + 4)
elif Q3 == 3:
    Ravenclaw = (Ravenclaw + 4)
elif Q3 == 4:
    Gryffindor = (Gryffindor + 4)
else:
    print("Wrong input!")

if Gryffindor > Ravenclaw and Gryffindor > Hufflepuff and Gryffindor > Slytherin:
    print("The house with the most points: 🦁 Gryffindor!")
elif Ravenclaw > Gryffindor and Ravenclaw > Hufflepuff and Ravenclaw > Slytherin:
    print("The house with the most points: 🦅 Ravenclaw!")
elif Hufflepuff > Gryffindor and Hufflepuff > Ravenclaw and Hufflepuff > Slytherin:
    print("The house with the most points: 🦡 Hufflepuff!")
elif Slytherin > Gryffindor and Slytherin > Ravenclaw and Slytherin > Hufflepuff:
    print("The house with the most points: 🐍 Slytherin!")
else:
    print("Wrong input!")

print(Gryffindor)
print(Ravenclaw)
print(Hufflepuff)
print(Slytherin)
